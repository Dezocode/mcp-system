# MCP Orchestrator Server Configuration

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=30
DOCKER_API_VERSION=auto

# Windows WSL Configuration
WSL_DISTRO=Ubuntu
WSL_USER=runner
WSL_HOME=/home/runner

# Monitoring Configuration
WATCHDOG_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# MCP System Configuration
MCP_WORKSPACE_ROOT=/home/runner/work/mcp-system/mcp-system
MCP_SESSION_DIR=./pipeline-sessions
MCP_LOG_LEVEL=INFO

# Windows Docker Desktop Configuration
DOCKER_DESKTOP_ENABLED=true
DOCKER_COMPOSE_VERSION=v2

# CLI Resolution Configuration
CLI_TIMEOUT=300
CLI_SHELL=/bin/bash
CLI_ENV_DETECTION=auto

# Security Configuration
ALLOWED_DOCKER_OPERATIONS=start,stop,restart,status,logs,inspect
RESTRICTED_PATHS=/etc,/sys,/proc
SAFE_MODE=true