PIPELINE_EXIT_CODE=$?
if [[ $PIPELINE_EXIT_CODE -eq 0 ]]; then
    echo ""
    echo "ğŸ‰ CONTINUOUS PIPELINE EXECUTION SUCCESSFUL!"
