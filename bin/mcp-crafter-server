#!/bin/bash
# MCP Crafter Server - Launcher Script
# Starts the MCP Crafter as an MCP server for Claude integration

# Get the directory of this script
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
MCP_SYSTEM_ROOT="$(dirname "$DIR")"

# Check if we're in the right directory
if [ ! -f "$MCP_SYSTEM_ROOT/src/mcp_crafter_mcp_server.py" ]; then
    echo "‚ùå Error: Cannot find mcp_crafter_mcp_server.py"
    echo "   Make sure this script is in the bin/ directory of mcp-system"
    exit 1
fi

# Set Python path
export PYTHONPATH="$MCP_SYSTEM_ROOT:$MCP_SYSTEM_ROOT/src:$PYTHONPATH"

# Run the MCP Crafter Server
cd "$MCP_SYSTEM_ROOT"
python src/mcp_crafter_mcp_server.py "$@"