{
  "mcpServers": {
    "mcp-system": {
      "command": "cross_platform.get_path("home") / bin/mcp-universal",
      "args": [
        "router"
      ],
      "env": {
        "MCP_SYSTEM_PATH": "cross_platform.get_path("home") / .mcp-system",
        "MCP_AUTO_DISCOVERY": "true"
      }
    }
  },
  "mcp_system_integration": {
    "enabled": true,
    "auto_discovery": true,
    "safe_mode": true,
    "installation_path": "cross_platform.get_path("home") / .mcp-system",
    "version": "1.0.0"
  }
}