{
  "auto_fix_on_save": true,
  "prevent_syntax_errors": true,
  "prevent_import_errors": true,
  "prevent_security_issues": true,
  "immediate_validation": true,
  "rollback_on_failure": true,
  "max_quality_fixes": 25,
  "enable_watchdog": true,
  "enable_learning": true,
  "file_patterns": {
    "python": ["*.py"],
    "config": ["*.json", "*.yaml", "*.yml", "*.toml"],
    "docs": ["*.md", "*.txt", "*.rst"],
    "scripts": ["*.sh", "*.bash"]
  },
  "exclude_patterns": [
    ".git/*",
    "__pycache__/*",
    "*.pyc",
    "*.pyo",
    ".tmp/*",
    ".autofix_backups/*",
    "backups/*",
    "venv/*",
    ".venv/*",
    "node_modules/*",
    ".pytest_cache/*"
  ],
  "critical_issue_priorities": {
    "syntax_errors": 1,
    "import_errors": 2,
    "security_vulnerabilities": 3,
    "undefined_functions": 4,
    "broken_tests": 5
  },
  "prevention_strategies": {
    "hyphenated_modules": {
      "enabled": true,
      "auto_fix": true,
      "strategy": "Replace hyphens with underscores in module names"
    },
    "template_syntax": {
      "enabled": true,
      "auto_fix": true,
      "strategy": "Quote numeric values with units in templates"
    },
    "broken_imports": {
      "enabled": true,
      "auto_fix": true,
      "strategy": "Fix import paths and module references"
    },
    "orphaned_methods": {
      "enabled": true,
      "auto_fix": false,
      "strategy": "Detect and flag methods extracted from classes"
    }
  },
  "watchdog_settings": {
    "debounce_time": 1.0,
    "max_concurrent_fixes": 3,
    "validation_timeout": 30,
    "enable_predictive_analysis": true
  },
  "learning_settings": {
    "pattern_confidence_threshold": 0.7,
    "max_patterns_to_store": 1000,
    "enable_pattern_matching": true,
    "auto_update_patterns": true
  },
  "notification_settings": {
    "verbose_logging": true,
    "show_fix_suggestions": true,
    "notify_on_prevention": true,
    "summary_frequency": "session"
  }
}