# MCP System Configuration
# Copy this file to .env and configure for your environment

# System Configuration
MCP_SYSTEM_PATH="$HOME/.mcp-system"
MCP_AUTO_DISCOVERY=true
MCP_SAFE_MODE=true
MCP_DEBUG=false

# Default Server Settings
DEFAULT_HOST=localhost
DEFAULT_PORT_START=8050
DEFAULT_TEMPLATE=python-fastmcp

# Claude Integration
CLAUDE_AUTO_INIT=true
CLAUDE_CONFIG_BACKUP=true
CLAUDE_CONFIG_PATH="$HOME/.claude/claude_desktop_config.json"

# Development Settings
MCP_ENV=development
MCP_LOG_LEVEL=info
MCP_AUTO_RELOAD=true

# Database Configuration (for servers that need it)
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db
REDIS_URL=redis://localhost:6379/0

# Authentication (for servers that need it)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Provider Configuration (for AI-enhanced features)
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# Monitoring (optional)
PROMETHEUS_PORT=9090
METRICS_ENABLED=false

# Docker Configuration
DOCKER_REGISTRY=localhost:5000
DOCKER_NAMESPACE=mcp-system

# Production Environment Variables (for docker-compose.prod.yml)
DB_PASSWORD=your-secure-database-password-here
GRAFANA_PASSWORD=your-secure-grafana-password-here